@model BANHSAURIENG.Models.tblAccount
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/livevalidation_standalone.js")" type="text/javascript"></script>
<div class="" style="text-align: center; margin-top: 120px;">
    <img src="@Url.Content("~/Images/template/logo_login.jpg")" alt="" />
</div>
<div style="margin-top:10px;width:100%">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "Log in was unsuccessful. Please correct the errors and try again.")
        <div class="loginform" visible="@ViewBag.loginformvisible">
            <div class="bar">
                Login Form</div>
            <div class="loginbody">
                <div style="height: 76px;">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Username)
                    </div>
                    <div class="editor-field">
                        <input class="k-textbox" id="UserName" name="UserName" value="@ViewBag.Username" style=" width:318px;" />
                    </div>
                    <div class="editor-label" style="margin-right: 5px;">
                        @Html.LabelFor(model => model.Password)
                    </div>
                    <div class="editor-field" style="width: 318px;">
                        @Html.PasswordFor(model => model.Password)
                    </div>
                </div>
                <div style="height: 40px;">
                    <input type="checkbox" name="Remember" style="float: left; margin-left: 85px;" />
                    Remember me
                </div>
                <label style="color: Red;width:280px;float:left">@ViewBag.Status</label>
                <div>
                    <input type="submit" value="Log in" class="k-button" style="float: right; width: 65px;" />
                </div>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#menu").hide();
        $("#Password").addClass("k-textbox").css("width", "300px");
        $(".text-box").addClass("k-textbox").removeClass("text-box").css("width", "300px");
        var UserName = new LiveValidation('UserName', { validMessage: " " });
        UserName.add(Validate.Presence);
        UserName.add(Validate.Length, { maximum: 50 });
        var Password = new LiveValidation('Password', { validMessage: " " });
        Password.add(Validate.Presence);
        Password.add(Validate.Length, { maximum: 50 });
        if ($(".loginform").attr("visible") == "false") {
            $(".loginbody").html("<label style='color: Red;float:left'>You login fail more than 3 time! Please wait 1 day to continue login...</label>");
        }
    })
</script>
<style type="text/css">
    .editor-label
    {
        float: left;
        width: auto;
    }
    .editor-field
    {
        float: left;
        width: 254px !important;
        margin-left: 10px;
    }
    .loginform
    {
        background-color: #e9e9e9;
        width: 388px;
        height: 218px;
        border-radius: 4px;
        padding: 15px;
        border: none;
        margin:auto;
    }
    .loginbody
    {
        width: 345px;
        height: 147px;
        background-color: white;
        border: 1px solid #CCCCCC;
        padding: 15px 20px 15px 20px;
    }
    .bar
    {
        width: 375px;
        height: 17px;
        background-color: #ebebeb;
        border: 1px solid #CCCCCC;
        border-bottom: none;
        padding: 10px 0 10px 10px;
        font-size: 14px;
    }
    .editor-field input
    {
        width: 240px !important;
    }
</style>
