@{
    ViewBag.Title = "Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="example" class="k-content" style="width: 100%; height: 1024px; margin: 0px">
    <div id="vertical" style="height: 100%; width: 100%;">
        <div id="top-pane" style="height: 100%; width: 100%;">
            <div id="horizontal" style="height: 100%; width: 100%;">
                <div id="left-pane" style="height: 15%; width: 100%;">
                    <div class="pane-content" style="padding: 0px">
                        <div class="k-toolbar k-grid-toolbar">
                            <a class="k-button" id="back" style="float: left; margin-left: 5px"><span class="k-icon k-i-seek-w">
                            </span></a><a class="k-button" id="forward" style="float: left; margin-left: 5px"><span
                                class="k-icon k-i-seek-e"></span></a>
                        </div>
                        <div id="panelbar-images">
                        </div>
                    </div>
                </div>
                <div id="right-pane" style="height: 85%; width: 100%;">
                    <div class="pane-content" style="padding: 0px">
                        <div class="k-toolbar k-grid-toolbar">
                            <a class="k-button"><span class="k-icon k-i-plus"></span></a><a class="k-button"><span
                                class="k-icon k-i-close"></span></a><a class="k-button"><span class="k-icon k-i-pencil">
                                </span></a>
                        </div>
                        <div class="k-toolbar k-grid-toolbar">
                            <div style="text-align: center">
                                Quản Lý Hóa Đơn</div>
                        </div>
                        @(Html.Kendo().Grid<BANHSAURIENG.Models.BillModel>()
        .Name("Bills")
        .Columns(columns =>
        {
            columns.Bound(e => e.CustomerID);
            columns.Bound(e => e.CreateBy);
            columns.Bound(e => e.CreateDate);
            columns.Bound(e => e.VoucherCode);
            columns.Bound(e => e.TotalMoney);
        })
        .ClientDetailTemplateId("billTemplate")
        .Pageable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetAllBills", "Bill"))
            .PageSize(5)
        )
        .Sortable()
        .Events(events => events.DataBound("dataBound"))
)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="billTemplate" type="text/kendo-tmpl">
    @(Html.Kendo().Grid<BANHSAURIENG.Models.BillDetailModel>()
            .Name("Details_#=BillID#")
            .Columns(columns =>
            {
                columns.Bound(o => o.BillID);
                columns.Bound(o => o.ProductID);
                columns.Bound(o => o.Quantity);
                columns.Bound(o => o.Price);
            })
            .DataSource(dataSource => dataSource
                .Ajax()
                .Read(read => read.Action("GetDetailByBillID", "Bill", new { billID = "#=BillID#" }))
            )
            .Pageable()
            .Sortable()
            .ToClientTemplate()
    )
    </script>
    <script>
        function dataBound() {
            this.expandRow(this.tbody.find("tr.k-master-row").first());
        }
    </script>
